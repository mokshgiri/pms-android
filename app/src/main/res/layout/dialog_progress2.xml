<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/progress_dialog_content_padding">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="@dimen/progress_bar_size"
        android:layout_height="@dimen/progress_bar_size"
        android:layout_marginLeft="18dp"
        android:layout_marginVertical="16dp"/>

    <TextView
        android:id="@+id/tv_progress_text"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="@dimen/progress_text_marginStart"
        android:layout_marginVertical="@dimen/progress_text_marginStart"
        android:text="@string/please_wait"
        android:textColor="@color/primary_text_color"
        android:textSize="@dimen/progress_text_size" />

</LinearLayout>
    <!--END-->